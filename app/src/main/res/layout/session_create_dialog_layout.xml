<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_select_colour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select your tools."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/black_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/game_create"
        app:layout_constraintEnd_toStartOf="@id/white_tool"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/text_select_colour" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/white_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/game_create"
        app:layout_constraintEnd_toStartOf="@id/coke_bottle_top_tool"
        app:layout_constraintStart_toEndOf="@id/black_tool"
        app:layout_constraintTop_toBottomOf="@id/text_select_colour" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/coke_bottle_top_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/game_create"
        app:layout_constraintEnd_toStartOf="@id/fanta_bottle_top_tool"
        app:layout_constraintStart_toEndOf="@id/white_tool"
        app:layout_constraintTop_toBottomOf="@id/text_select_colour"

        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fanta_bottle_top_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/game_create"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/coke_bottle_top_tool"
        app:layout_constraintTop_toBottomOf="@id/text_select_colour"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/game_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#CC6666"
        android:text="Start Game"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/text_select_colour" />


</androidx.constraintlayout.widget.ConstraintLayout>